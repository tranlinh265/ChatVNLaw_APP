<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/logo_contanier">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_centerVertical="true"
            android:src="@drawable/can_"
            android:transitionName="@string/logoTransitionName"/>

        <ImageView
            android:id="@+id/iv_logo_vnlaw"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logo_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_logo"
            android:src="@drawable/ic_vnlaw" />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/logo_contanier"
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/start_app_description"
        android:textColor="@android:color/white"
        android:textSize="@dimen/start_app_text_size"/>
</RelativeLayout>