<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_parrent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/working"
        android:scaleType="centerCrop"
        android:transitionName="topImage"
        android:paddingRight="100dp"
        android:paddingEnd="100dp"/>
    <ScrollView
        android:paddingTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Files"
                android:id="@+id/label_files"
                android:textSize="25dp"
                android:paddingLeft="20dp"
                android:textColor="#102027"
                android:gravity="right"
                android:layout_marginRight="20dp"/>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/label_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_file_container">

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textColor="#102027"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:id="@+id/label_photos"
                android:layout_below="@+id/rv_file_container"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/label_photos">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_image_container_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_image_container_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/tb_actionbar">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_action_back_light"
            android:id="@+id/ibtn_back"
            android:backgroundTint="@android:color/transparent"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@id/ibtn_back"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/tv_sender_displayname"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>