<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:id="@+id/title_container">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@android:color/white"
            android:textSize="40dp"
            android:paddingLeft="@dimen/signup_layout_text_padding"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:backgroundTint="@color/colorGray"
            android:paddingBottom="@dimen/login_layout_button_padding"
            android:paddingTop="@dimen/login_layout_button_padding"
            android:layout_marginRight="-10dp"
            android:layout_marginLeft="-10dp"
            android:alpha=".9"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/signup_layout_text_padding"
            android:background="@android:drawable/dialog_holo_light_frame">
            <ImageButton
                android:adjustViewBounds="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_camera"
                android:backgroundTint="@android:color/white"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/email_container"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/title_container"
        style="@style/SignUpForm.InfoContainer">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_email"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_left_corner_button"
            android:backgroundTint="@color/colorGrayDark"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorGray"
            android:background="@drawable/bg_right_corner_button"
            android:alpha="0.99"/>
    </LinearLayout>
    <LinearLayout
        style="@style/SignUpForm.InfoContainer"
        android:id="@+id/password_container"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/email_container">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_password"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/colorGrayDark"
            android:background="@drawable/bg_left_corner_button"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorGray"
            android:alpha="0.99"
            android:background="@drawable/bg_right_corner_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/password_confirm_container"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/password_container"
        style="@style/SignUpForm.InfoContainer">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_verified"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/colorGrayDark"
            android:background="@drawable/bg_left_corner_button"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorGray"
            android:alpha="0.99"
            android:background="@drawable/bg_right_corner_button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/username_container"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/password_confirm_container"
        style="@style/SignUpForm.InfoContainer">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_username"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/colorGrayDark"
            android:background="@drawable/bg_left_corner_button"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorGray"
            android:alpha="0.99"
            android:background="@drawable/bg_right_corner_button"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/username_container"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/login_layout_padding"
        android:paddingLeft="@dimen/login_layout_padding">

        <ImageButton
            android:id="@+id/ibtn_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="10dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:backgroundTint="@color/colorGray"
            android:alpha="0.7"/>
        <Button
            android:layout_toRightOf="@+id/ibtn_back_to_login"
            android:layout_width="fill_parent"
            android:text="Continue"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/ibtn_back_to_login"
            android:layout_alignBottom="@+id/ibtn_back_to_login"
            android:textAllCaps="false"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:backgroundTint="@color/colorGrayDark"
            android:layout_height="wrap_content"
            android:alpha="0.8"/>
    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>