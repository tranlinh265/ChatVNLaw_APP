<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_container">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/working"
        android:scaleType="centerCrop"
        android:transitionName="topImage"
        android:id="@+id/iv_top_image"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/pb_loading"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/tb_actionbar"
        android:background="@android:color/transparent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_action_back_light"
            android:id="@+id/ibtn_back"
            android:backgroundTint="@android:color/transparent"/>
        <ImageButton
            android:src="@drawable/ic_action_info_light"
            android:id="@+id/ibtn_info"
            android:backgroundTint="@android:color/transparent"
            android:layout_toRightOf="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_target_user_avatar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/ibtn_info"
            android:layout_toLeftOf="@+id/iv_target_user_avatar"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:id="@+id/tv_sender_displayname"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_chat_content_container"
        android:scrollbars="vertical"
        android:layout_below="@+id/tb_actionbar"
        android:layout_above="@+id/chat_input_container"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/chat_input_container"
        android:layout_width="match_parent"
        android:minHeight="?android:attr/actionBarSize"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_send"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/ibtn_pick_image"
            android:visibility="gone"/>
        <EditText
            android:layout_centerVertical="true"
            android:textColorHighlight="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_chat_input"
            android:layout_toLeftOf="@+id/btn_send"
            android:layout_toRightOf="@+id/ibtn_pick_image"
            android:textColor="@android:color/white"
            android:backgroundTint="#8b6b61"
            android:alpha="0.7"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="3dp"
            android:background="@drawable/edt_bg"
            android:maxHeight="?android:attr/actionBarSize"/>
        <ImageButton
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_send"
            android:backgroundTint="@android:color/transparent" />
    </RelativeLayout>
</RelativeLayout>