<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">
    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/home_background"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:layout_above="@+id/message_container">
        <android.support.v7.widget.RecyclerView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_unread_messages"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        app:layout_heightPercent="50%"
        android:layout_marginBottom="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="All Chats"
            android:textStyle="bold"
            android:id="@+id/tv_all_chat"
            android:textSize="25dp"
            android:paddingLeft="10dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/tv_all_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_messages">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"></android.support.v7.widget.Toolbar>
</android.support.percent.PercentRelativeLayout>