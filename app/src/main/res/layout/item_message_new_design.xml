<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/message_container"
    android:background="@android:color/transparent">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/civ_profile_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#e5e5e5"/>
    <android.support.percent.PercentRelativeLayout
        android:layout_toRightOf="@+id/civ_profile_image"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_sender"
            android:lines="1"
            app:layout_widthPercent="50%"
            android:layout_toLeftOf="@+id/ibtn_call"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/tv_time"
            android:lines="1"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"
            android:textStyle="bold"
            android:text="1 hour"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_purple"
            android:gravity="right"
            android:visibility="gone"
            android:layout_alignBottom="@id/tv_sender"
            android:layout_alignTop="@id/tv_sender"/>
        <ImageButton
            android:id="@+id/ibtn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_phone_dark"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sender"
            android:lines="1"
            android:textColor="#a0a0a0"
            android:layout_toLeftOf="@+id/ibtn_call"
            android:layout_width="match_parent" />
    </android.support.percent.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="#dddddd"
        android:layout_below="@id/civ_profile_image"
        android:layout_marginTop="10dp"/>
</android.support.percent.PercentRelativeLayout>