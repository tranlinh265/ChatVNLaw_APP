<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/fragment2_logo"
        android:layout_width="@dimen/logo_size_big"
        android:layout_height="@dimen/logo_size_big"
        android:layout_centerHorizontal="true"
        android:src="@drawable/can_"
        android:transitionName="@string/logoTransitionName"/>
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment2_logo"
        android:indeterminateTint="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/tv_welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/start_app_text_size"
        android:textColor="@android:color/white"
        android:layout_below="@id/fragment2_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>
</RelativeLayout>