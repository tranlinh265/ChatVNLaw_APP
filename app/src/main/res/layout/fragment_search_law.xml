<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_parrent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#212121"
        android:layout_height="?android:attr/actionBarSize">
        <ImageButton
            android:id="@+id/ibtn_home_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_back_light"
            android:backgroundTint="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/ibtn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_search_light"
            android:backgroundTint="@android:color/transparent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e2e1">
        <RelativeLayout
            android:id="@+id/rl_progressbar"
            android:elevation="10dp"
            android:background="@android:color/black"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/progress_bar"
                android:elevation="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_result"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_data"
                android:text="Không có kết quả nào"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:textSize="24dp"
                android:visibility="gone"/>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nsv_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rv_law_result"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_current_position"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiển thị thêm"
                        android:textAllCaps="false"
                        android:id="@+id/btn_load_more"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>