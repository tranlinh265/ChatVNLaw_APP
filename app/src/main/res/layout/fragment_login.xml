<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_background"
    android:paddingRight="@dimen/login_layout_padding"
    android:paddingLeft="@dimen/login_layout_padding"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="45%"
        android:gravity="center"
        android:id="@+id/title_container">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vnlaw"/>
    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/infor_container"
        app:layout_heightPercent="20%"
        android:layout_width="match_parent"
        android:layout_below="@+id/title_container">
        <LinearLayout
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%"
            android:layout_toRightOf="@+id/email_container"
            android:background="@android:drawable/dialog_holo_dark_frame">
            <ImageButton
                android:src="@drawable/ic_sign_in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_default_button"
                android:backgroundTint="@color/colorGrayDark"
                android:stateListAnimator="@animator/button_default_animation"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/email_container"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="80%"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:alpha=".9">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_left_corner_button"
                android:backgroundTint="@color/colorGrayDark" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorGray"
                android:background="@drawable/bg_right_corner_button"
                android:paddingLeft="@dimen/login_layout_button_padding"
                android:alpha=".9"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/password_container"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="50%"
            android:layout_below="@+id/email_container"
            android:orientation="horizontal"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:alpha="0.9">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_password"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/colorGrayDark"
                android:background="@drawable/bg_left_corner_button" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorGray"
                android:background="@drawable/bg_right_corner_button"
                android:paddingLeft="@dimen/login_layout_button_padding"
                android:alpha=".9"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
    <LinearLayout
        android:id="@+id/forgot_password_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/infor_container"
        app:layout_heightPercent="10%"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/forgot_password"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fb_gg_login_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/forgot_password_container"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:alpha="0.9"
            android:background="@android:drawable/dialog_holo_light_frame">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_facebook"
                android:alpha="0.9"
                android:adjustViewBounds="true"
                android:stateListAnimator="@animator/button_default_animation"
                android:background="@color/colorPrimaryDark"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginLeft="15dp"
            android:alpha="0.9">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_google"
                android:background="@android:color/holo_red_dark"
                android:stateListAnimator="@animator/button_default_animation"
                android:alpha="0.9" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/signup_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        android:layout_below="@+id/fb_gg_login_container"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_to_vnlaw"
            android:textColor="@android:color/white"
            android:layout_marginRight="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
