<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorGrayDark">
    <LinearLayout
        android:layout_height="match_parent"
        app:layout_widthPercent="10%"
        android:orientation="vertical"
        android:id="@+id/ll_left_layout">
        <View
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:background="@drawable/checkbox_bg"
                android:layout_width="20dp"
                android:layout_height="20dp">
                <CheckBox
                    android:layout_marginLeft="3dp"
                    android:button="@drawable/checkbox_state"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:id="@+id/cb_job_done"/>
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"/>
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_left_layout"
        android:id="@+id/ll_right_layout_timer"
        android:orientation="horizontal"
        android:visibility="gone">
        <View android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_time_day"
            android:textColor="@color/colorBlueLight"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>
        <View android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/white"/>
    </LinearLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_left_layout"
        android:id="@+id/prl_right_layout_item_container">
        <View
            app:layout_widthPercent="15%"
            android:layout_height="3dp"
            android:background="@android:color/white"
            android:layout_centerVertical="true"
            android:id="@+id/v_cross_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/tv_hour"
            android:textColor="@color/colorBlueLight"
            android:layout_above="@id/v_cross_line"/>
        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/v_cross_line"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@android:color/white"
            app:contentPadding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textColor="@color/colorGrayDark"
                    android:textStyle="bold"
                    android:id="@+id/tv_target_user"/>
                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textColor="@color/colorGrayDark"
                    android:id="@+id/tv_content"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>