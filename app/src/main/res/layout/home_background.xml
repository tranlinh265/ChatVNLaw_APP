<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        app:layout_heightPercent="25%"
        android:background="#7defcd"
        android:id="@+id/new_message_container"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 New Messages"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:id="@+id/tv_number_of_unread"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/new_message_container"
        android:background="@color/colorGrayDark"></LinearLayout>
</android.support.percent.PercentRelativeLayout>