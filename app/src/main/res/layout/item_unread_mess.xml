<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">
    <ImageView android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        android:adjustViewBounds="true"
        android:src="@drawable/square_avatar"
        android:id="@+id/unread_avatar"/>
    <TextView
        app:layout_widthPercent="55%"
        app:layout_heightPercent="10%"
        android:id="@+id/unread_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="55dp"
        android:layout_toRightOf="@+id/unread_avatar"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:text="Hey! How are you? Did you see latest"
        android:textSize="19dp"/>
    <TextView
        android:id="@+id/unread_sender"
        android:layout_toRightOf="@+id/unread_avatar"
        android:layout_alignBottom="@id/unread_avatar"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:text="MiChael Shelton"
        android:textStyle="bold"
        android:maxHeight="20dp"
        app:layout_widthPercent="40%"
        android:layout_height="20dp"/>
    <TextView
        app:layout_widthPercent="20%"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/unread_sender"
        android:layout_alignTop="@+id/unread_sender"
        android:text="Just now"
        android:gravity="right"
        android:textColor="@android:color/holo_purple"/>
</android.support.percent.PercentRelativeLayout>