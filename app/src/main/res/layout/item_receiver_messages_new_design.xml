<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/colorGrayDark">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_sender_picture"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:text="10:30pm"
        android:textColor="@color/colorGrayLight"
        android:id="@+id/tv_text_time_stamp"/>
    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_below="@id/tv_text_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_content_bg_1110"
        android:paddingLeft="15dp"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_text_content"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người cho anh cảm thấy cuộc sống này anh càng phải trân trọng
Ngày nào em cũng bên anh"/>
        <TextView
            android:id="@+id/tv_file_url"
            style="@style/MessageItem.Text"
            android:text="@string/google_url"
            android:gravity="center"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_file_padding" />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_avatar"
            android:adjustViewBounds="true"
            android:backgroundTint="@android:color/white"
            android:id="@+id/iv_image_content" />

    </RelativeLayout>
</RelativeLayout>