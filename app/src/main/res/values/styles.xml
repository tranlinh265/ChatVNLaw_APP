<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="FacebookButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#3F51B5</item>
        <item name="colorButtonNormal">#303F9F</item>
    </style>
    <style name="GoogleButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/holo_red_light</item>
        <item name="colorButtonNormal">@android:color/holo_red_dark</item>
    </style>
    <style name="SignInButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorGrayDark</item>
        <item name="colorButtonNormal">@color/colorGrayDark</item>
    </style>

    <style name="MessageItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MessageItem.Text" parent="MessageItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MessageItem.Timer" parent="MessageItem">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="MessageItem.Container" parent="MessageItem">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>
    <style name="MessageItem.Container.Right" parent="MessageItem.Container">
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>
    <style name="MessageItem.Container.Left" parent="MessageItem.Container">
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>
    <style name="MessageItem.Avatar">
        <item name="android:layout_height">@dimen/default_image_size_for_message</item>
        <item name="android:layout_width">@dimen/default_image_size_for_message</item>
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="SignUpForm">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="SignUpForm.InfoContainer" parent="SignUpForm">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/login_layout_padding</item>
        <item name="android:layout_marginLeft">@dimen/login_layout_padding</item>
        <item name="android:layout_marginBottom">@dimen/sign_up_button_margin</item>
        <item name="android:layout_marginTop">@dimen/sign_up_button_margin</item>
        <item name="android:background">@android:drawable/dialog_holo_dark_frame</item>
        <item name="android:alpha">0.9</item>
    </style>
    <style name="MenuStyle">

    </style>
    <style name="MenuStyle.Container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MenuStyle.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MenuStyle.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="ProfileStyle">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    <style name="ProfileStyle.Label" parent="ProfileStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/colorBlueLight</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ProfileStyle.Edittext" parent="ProfileStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:editable">true</item>
        <item name="android:textColor">@color/colorBlueLight</item>
        <item name="android:backgroundTint">@color/colorBlueLight</item>
    </style>
    <style name="RoomInfo">

    </style>
    <style name="RoomInfo.Label" parent="RoomInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_purple</item>
    </style>
    <style name="SpecializationTextViewStyle">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/specialization_bg</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
